#import "main_menu.h"

/* ---------------------------------------------------------------------------- *
 * 									menu()										*
 * ---------------------------------------------------------------------------- *
 Method to display the main menu and provide functionality using the main menu.
 * ---------------------------------------------------------------------------- */
void main_menu(){
	// Display the main menu.
	menu_options* cursor = generate_main_menu_options;

	while(key != ENTER){
		// If the user does up/down arrow, update the screen. If enter, change the game state.
		xil_printf("Main Menu displayed.\n");
		// Wait for user input.
		key = wait_for_keyboard_input();
		// Using the user input, obtain what the user wants to do.
		if (key == 'w'){
			//Generate appropriate screen, move cursor up one
			cursor = cursor->next;
			xil_printf("Cursor at: %s\n", cursor->option_name);
		}
		if (key == 's'){
			//Change state
			cursor = cursor->prev;
			xil_printf("Cursor at: %s\n", cursor->option_name);
		}
		if (key == ENTER){ //Enter key is pressed
			xil_printf("Cursor at: %s\n", cursor->option_name);
		}
	}
	// User can change the game state to: settings, start game, high scores.

	if (cursor->option_name == "Play"){
		play_game();
	}
	if (cursor->option_name == "Options"){
		options();
	}
	if (cursor->option_name == "Hi-Score"){
		hiscore();
	}
}

struct menu_options* generate_menu_options(){
	struct menu_option* play = malloc(sizeof(struct menu_option));
	struct menu_option* settings = malloc(sizeof(struct menu_option));
	struct menu_option* hiscore = malloc(sizeof(struct menu_option));
	play->string = "Play";
	play->string = "Settings";
	play->string = "Hi-Score";

	play->next = settings;
	settings->next = hiscore;
	hiscore->next = play;

	play->prev = hiscore;
	settings->prev = play;
	hiscore->prev = settings;

	return play;
}

void delete_menu_options(menu_option* menu_option){
	//Function might be a lil sus
	for(int i = 0; i < 3; i++){
		menu_option* temp = menu_option->next;
		free(menu_option);
		menu_option = temp;
	}
	return;
}



