#include <stdio.h>

#ifndef AUDIOCONTROL_H
#define AUDIOCONTROL_H

class AudioControl{

public:
	AudioControl(uint64_t, uint8_t*, uint8_t*);
	void increment_volume(void);
	void decrease_volume(void);
	void increment_index(void);
	void change_song(uint8_t* current_song_left_channel, uint8_t* current_song_right_channel, uint64_t max_index);
	void start_song(void);
	void stop_song(void);
	void restart_song(void);

private:
	bool song_playing;
	uint32_t volume;
	uint64_t index;
	uint64_t max_index;
	uint8_t* current_song_left_channel;
	uint8_t* current_song_right_channel;
};

#endif
