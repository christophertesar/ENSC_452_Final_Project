#include <stdio.h>

#ifndef AUDIOCONTROL_H
#define AUDIOCONTROL_H

class AudioControl{

public:
	AudioControl(uint64_t, uint8_t*, uint8_t*);
	increment_volume();
	decrease_volume();
	increment_index();
	change_song(uint8_t* current_song_left_channel, uint8_t* current_song_right_channel, uint64_t max_index);
	start_song();
	stop_song();
	restart_song();

private:
	bool song_playing;
	uint32_t volume;
	uint64_t index;
	uint64_t max_index;
	uint8_t* current_song_left_channel;
	uint8_t* current_song_right_channel;
};

#endif
